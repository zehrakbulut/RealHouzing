@model List<CategoryListViewModel>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<br /><br />
<div class="container">
    <table class="table table-bordered">
        <tr>#</tr>
        <tr>Kategori Adı</tr>
        <tr>Sil</tr>
        <tr>Güncelle</tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryID</td>
                <td>@item.CategoryName</td>
                <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="#" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>  